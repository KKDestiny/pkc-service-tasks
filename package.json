{
  "name": "typescript-express-swagger-setup",
  "version": "1.1.0",
  "description": "node.js project setup with typescript, express.js, swagger and tools",
  "author": "linxiaozhou.com",
  "main": "./src/server.ts",
  "license": "MIT",
  "engines": {
    "npm": ">=6.0.0",
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "npx rimraf dist && babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "clean": "npx rimraf dist build node_modules coverage logs yarn.lock",
    "watch:server": "npx kill-port 3000 && npx nodemon --exec npx babel-node --extensions \".js,.ts\" src/server.ts --watch src",
    "serve": "npm run build && pm2 start ./ecosystem.config.js",
    "start": "npm-run-all --parallel watch:*",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpileOnly --ignore-watch node_modules --no-notify src/server.ts",
    "obfus": "npx javascript-obfuscator dist --output dist --exclude 'dist/seeders/*, dist/migrations/*' --config obfuscator.config.json",
    "swagger": "npx babel-node --extensions \".js,.ts\" scripts/gen-swagger.ts",
    "postman": "npx babel-node --extensions \".js,.ts\" scripts/gen-postman.ts",
    "schemas": "npx babel-node --extensions \".js,.ts\" scripts/gen-schemas.ts",
    "test": "is-ci \"test:coverage\" \"test:watch\"",
    "test:coverage": "npx jest --coverage --detectOpenHandles --forceExit",
    "test:watch": "npx jest --watchAll --runInBand --detectOpenHandles",
    "seed": "npx md-seed run",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "chalk": "^4.1.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dayjs": "^1.11.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-status-monitor": "^1.3.3",
    "express-validator": "^6.8.0",
    "express-winston": "^4.0.5",
    "fs-extra": "^9.0.1",
    "helmet": "^4.2.0",
    "joi": "^17.3.0",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "mongoose": "^5.11.8",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "swagger-ui-express": "^4.1.5",
    "read-pkg": "5.2.0",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/node": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-typescript": "^7.10.1",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/chalk": "^2.2.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/express-status-monitor": "^1.3.0",
    "@types/express-winston": "^4.0.0",
    "@types/jest": "^26.0.0",
    "@types/method-override": "^0.0.32",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.3.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.6",
    "is-ci-cli": "^2.1.2",
    "javascript-obfuscator": "^2.9.4",
    "jest": "^26.6.3",
    "jest-coverage-badges": "^1.1.2",
    "jest-extended": "^0.11.5",
    "jest-html-reporters": "^2.1.2",
    "kill-port": "^1.6.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.0.0-pre.49",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
